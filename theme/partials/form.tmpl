{{ define "form" }}

 <form  {{if .Data.form.Name}}name="{{.Data.form.Name}}"{{end}} {{if .Data.form.ID}}id="{{.Data.form.ID}}"{{end}}  method="{{ .Data.form.Method }}" action="?login_id={{ .Data.form.LoginID }}&login_state={{ .Data.form.LoginState }}"  {{if .Data.form.CSS}}style="{{range $k, $v := .Data.form.CSS}}{{$k}}: {{$v}}; {{end}}"{{end}} class="{{ if .Data.form.Classes }}{{range .Data.form.Classes}} {{.}}{{end}}{{end}}">
    {{ .Data.csrfField }}
	<div class="row" name="row_main" id="row_main">
		{{ range .Data.form.FormElements }}
            {{ if eq (.FieldType) "text" }}
                {{ template "form_text" . }}
            {{ else if eq (.FieldType) "password" }}
                {{ template "form_password" . }}
            {{ else if eq (.FieldType) "number" }}
                {{ template "form_number" . }}
            {{ else if eq (.FieldType) "button" }}
                {{ template "form_button" . }}
            {{ else if eq (.FieldType) "checkbox" }}
                {{ template "form_checkbox" . }}
            {{ else if eq (.FieldType) "array" }}
                {{ template "form_array" . }}
            {{ else  }}
                {{ template "form_unsupported" . }}
            {{ end }}
        {{ end }}
	</div>

    {{ if .Data.captchaSiteKey }}
    <div class="g-recaptcha"
        data-sitekey="{{ .Data.captchaSiteKey }}"
        data-callback="enableSubmit"
        data-expired-callback="disableSubmit"
        data-error-callback="disableSubmit"

    ></div>
    {{ end }}
</form>


{{ end }}