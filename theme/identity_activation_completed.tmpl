{{ template "base" . }}

{{ define "title" }} User activated {{ end }}

{{ define "content" }}
  <div class="aut-banner-contained">
    {{ template "header" .Config }}
  </div>


  <div class="mdc-card aut-container">
    <div class="color-bar"></div>

    <div id="user-activated">
      <div class="aut-header">
        <div style="text-align: center">
          <div class="aut-list-header">
            <div class="header-avatar-name">
              <h3>User activated</h3>
            </div>
          </div>
        </div>
      </div>

      <div class="sign-in-content">


        <h2 class="header-sign-up">Success!</h2>
        <div class="body2 sent-otp-info">You've successfully activated your account.</div>

        {{ if .Data.SessionID }}
        <a href="{{ .Data.LoginPath }}">
            <button class="mdc-button mdc-button--raised base-confirm-button">
                Sign in
            </button>
        </a>
        {{ end }}

      </div>
    </div>
  </div>

  {{ template "footer" }}
{{ end }}
