{{ template "base" . }}

{{ define "title" }}Authorization Control Plane - Landing page{{ end }}

{{ define "content" }}

  <div class="aut-banner-contained">
    {{ template "header" .Config }}
  </div>

  <div class="mdc-card aut-container">
    <div class="aut-header-tenant-selection">
      <div style="text-align: left;">
        <span class="aut-helper-text" style="color: #ffffff;">Welcome to</span>
        <h1 class="aut-list-header-tenant-selection">Authorization Control Plane</h6>
      </div>
    </div>
    <div style="padding: 10px 90px 0 90px;">
      <div style="margin: 20px 0 5px 0;">
        <span class="aut-helper-text">Find out how to</span>
      </div>
      <ul class="mdc-list mdc-list--avatar-list">
        <a href="https://docs.authorization.cloudentity.com/howto/configure/tenants/" target="_blank">
          <li class="mdc-list-item aut-list aut-list-tenant-selection">
            <span class="mdc-list-item__graphic material-icons aut-avatar-icon" aria-hidden="true">business</span>
            <span class="mdc-list-item__text aut-list-link">Create a tenant</span>
            <span class="mdc-list-item__meta material-icons" aria-hidden="true">navigate_next</span>
          </li>
        </a>
      </ul>
    </div>
    <div class="aut-footer-tenant-selection">
      <p>Need more technical details?</p>
      <p>Access <a href="https://docs.authorization.cloudentity.com" target="_blank" rel="noopener">Documentation</a></p>
    </div>
  </div>
{{ end }}